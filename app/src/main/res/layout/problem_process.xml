<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên nguời yêu cầu"
            android:textSize="20dp"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:shape="ring">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/hutaopicture"
                    android:background="@drawable/circle_avatar"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/userName"
                    android:textSize="25dp"
                    android:text="Lê Văn Hiêu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000" />
                <TextView
                    android:textSize="15dp"
                    android:text="0797151033"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000" />
            </LinearLayout>

            <ImageView
                android:layout_marginLeft="50dp"
                android:id="@+id/callToUser"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_call_24"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời Gian:"
                android:textSize="20dp"
                android:textColor="#3C3C3C"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="9:05 AM"
                android:textSize="20dp"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng:"
                android:textSize="20dp"
                android:textColor="#3C3C3C"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="T1101"
                android:textSize="20dp"
                android:textColor="#000000"/>
        </LinearLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả sự cố:"
                android:textSize="20dp"
                android:textColor="#3C3C3C"/>
        <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/problem_description">
            <TextView
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sự cố này hoàn thành chưa được tốt, cần khắc phục"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/baseline_check_circle_24"/>
                <View
                    android:layout_marginLeft="34dp"
                    android:layout_width="2dp"
                    android:layout_height="45dp"
                    android:background="#000000"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/baseline_check_circle_24"/>
                <View
                    android:layout_marginLeft="34dp"
                    android:layout_width="2dp"
                    android:layout_height="45dp"
                    android:background="#000000"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/baseline_check_circle_24"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yêu Cầu Xử Lý"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8-2-2023"
                        android:textSize="18dp"/>
                    <View
                        android:layout_marginLeft="10dp"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#000000"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9:05 AM"
                        android:textSize="18dp"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="63dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yêu Cầu Đã Được Tiếp Nhận"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8-2-2023"
                        android:textSize="18dp"/>
                    <View
                        android:layout_marginLeft="10dp"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#000000"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9:25 AM"
                        android:textSize="18dp"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="63dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yêu Cầu Đã Hoàn Thành"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8-2-2023"
                        android:textSize="18dp"/>
                    <View
                        android:layout_marginLeft="10dp"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#000000"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00 AM"
                        android:textSize="18dp"/>
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>