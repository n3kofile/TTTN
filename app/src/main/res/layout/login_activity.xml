<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ECECEC">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="900px"
        android:background="@drawable/bottom_rounded_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:background="@drawable/rounded_all_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="201dp"
            android:layout_height="82.41dp"
            android:layout_marginTop="40dp"
            tools:srcCompat="@drawable/e1fe7c544c7e41a7844415782492334c"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/facility_selection"
            android:layout_width="201dp"
            android:layout_height="36dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/box_shadow"
            android:text="Lựa chọn cơ sở"
            android:textSize="12sp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="201dp"
            android:layout_height="36dp"
            android:background="@drawable/box_shadow"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/googlelogo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
