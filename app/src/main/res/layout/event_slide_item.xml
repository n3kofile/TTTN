<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gray_boder_radius_8pd_bg">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/event_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_weight="2">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/esi_event_itme"
                android:text="1/3/2023"
                android:textSize="10dp"
                android:fontFamily="@font/poppins"
                android:textColor="#333333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/esi_event_name"
                android:maxLines="2"
                android:text="LỄ TÔN VINH SINH VIÊN TIÊU BIỂU
                                GODEN BEE AWARDS SUMMER 20.."
                android:textSize="10dp"
                android:fontFamily="@font/poppins"
                android:textColor="#0D3565"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>